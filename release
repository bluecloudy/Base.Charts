#!/bin/bash  
# automates releasing new versions of this chart:
# 1. packages chart
# 2. updates index 
set -e

cd "$(dirname "$0")"

version=$(grep "version: " Chart.yaml | sed 's/version://')

echo "Release version $version?  "
read -s -n1 -p "[y/N]" bumped
[ "$bumped" = y ] || { echo -e "\nAborting"; exit 1; }
echo 

helm package . > /dev/null
mv base-*.tgz docs
echo Packaged chart version $version
helm repo index docs --url https://bluecloudy.github.io/Base.Charts
echo Updated index.yaml